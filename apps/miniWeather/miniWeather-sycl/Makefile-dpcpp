#===============================================================================
# User Options
#===============================================================================

# Compiler can be set below, or via environment variable
CC        = mpicxx
OPTIMIZE  = yes
DEBUG     = no

GPU       = yes
CUDA      = no
CUDA_ARCH = sm_80
# HIP       = no
# HIP_ARCH  = gfx908
# GCC_TOOLCHAIN = "/auto/software/gcc/x86_64/gcc-9.1.0/"

# ifeq ($(CUDA), yes)
#   MPI_INCLUDE = "/opt/nvidia/hpc_sdk/Linux_x86_64/22.11/comm_libs/mpi/include"
#   MPI_LIB_DIR = "/opt/nvidia/hpc_sdk/Linux_x86_64/22.11/comm_libs/mpi/lib"
# else
#   MPI_INCLUDE = "/usr/lib/x86_64-linux-gnu/openmpi/include"
#   MPI_LIB_DIR = "/usr/lib/x86_64-linux-gnu/openmpi/lib"
# endif

#===============================================================================
# Program name & source code list
#===============================================================================

program = main

source = main.cpp timing.cpp

obj = $(source:.cpp=.o)

#===============================================================================
# Sets Flags
#===============================================================================

# Standard Flags
CFLAGS := $(EXTRA_CFLAGS) \
          -DNX=4000 \
       	  -DNZ=2000 \
	  -DSIM_TIME=1 \
	  -DDATA_SPEC=DATA_SPEC_THERMAL \
          -I$(MPI_INCLUDE) \
           -I../include --opensycl-targets=cuda:sm_80 #generic #-fsycl #-fsycl-targets=spir64_x86_64 -Xs "-march=avx512"

# Linker Flags
LDFLAGS = -L$(MPI_LIB_DIR) -lmpi

ifeq ($(NDRANGE), 1)
  CFLAGS += -DNDRANGE
endif

ifeq ($(CUDA), yes)
  CFLAGS += -fsycl-targets=nvptx64-nvidia-cuda-sycldevice \
            -Xsycl-target-backend --cuda-gpu-arch=$(CUDA_ARCH)
#            --gcc-toolchain=$(GCC_TOOLCHAIN)
endif

ifeq ($(HIP), yes)
  CFLAGS += -fsycl-targets=amdgcn-amd-amdhsa \
	    -Xsycl-target-backend --offload-arch=$(HIP_ARCH) 
endif

# Debug Flags
ifeq ($(DEBUG),yes)
  CFLAGS  += -g -DDEBUG
  LDFLAGS += -g
endif

# Optimization Flags
ifeq ($(OPTIMIZE),yes)
  CFLAGS += -O3 -march=native -ffast-math -funroll-loops
endif

ifeq ($(GPU),yes)
  CFLAGS +=-DUSE_GPU
endif
#===============================================================================
# Targets to Build
#===============================================================================

$(program): $(obj)
	$(CC) $(CFLAGS) $(obj) -o $@ $(LDFLAGS)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(program) $(obj)

run: $(program)
	mpiexec -n 1 ./$(program)
